<h1>New Article</h1>

<%= form_for(@article) do |f| %>
<div class="form-group">
  <%= f.label :title, 'What is your article title?'%>
  <%= f.text_field :title%>
</div>

<div class="form-group">
  <%= f.label :content, 'Describe your article' %>
  <%= f.text_field :content %>
</div>

<%= f.submit %>
<% end %>
